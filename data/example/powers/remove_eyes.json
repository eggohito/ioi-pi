{
    "type": "apoli:item_on_item",
    "using_item_condition": {
        "type": "apoli:empty"
    },
    "on_item_condition": {
        "type": "apoli:nbt",
        "nbt": "{has_eyes: 1b}"
    },
    "on_item_action": {
        "type": "apoli:modify",
        "modifier": "ioi-pi:api/select_item"
    },
    "entity_action": {
        "type": "apoli:and",
        "actions": [
            {
                "type": "apoli:execute_command",
                "command": "tag @s add example.remove_eyes"
            },
            {
                "type": "apoli:execute_command",
                "command": "function #ioi-pi:api/selected_item/get"
            },
            {
                "type": "apoli:execute_command",
                "command": "tag @s remove example.remove_eyes"
            }
        ]
    }
}